<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danizeul.revind.FeedbackRaspunsFragment"
    android:background="#000000"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fundal_style_verde"
        android:orientation="vertical"
        android:id="@+id/FeedbackFundal">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/semn_corect"
            android:id="@+id/FeedbackImagine"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Răspuns corect !"
            android:id="@+id/FeedbackText"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textColor="#FFFFFF"
        android:text="Pana acum ai raspuns corect la 9 din 15 intrebari !"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/FeedbackStats"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuă ==>"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:background="@drawable/btn_style_neatins_2"
        android:padding="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/FeedbackContinua"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Citește lecția"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:background="@drawable/btn_style_neatins_2"
        android:padding="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/FeedbackInvata"
        android:visibility="gone"/>



</LinearLayout>
